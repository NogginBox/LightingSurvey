@using LightingSurvey.MvcSite.ViewModels.Survey
@model QuestionPageViewModel<NameQuestionViewModel>
@{
    ViewData["Title"] = "Question 1";
}

<a asp-controller="Home" asp-action="Index" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form method="post" novalidate>
                <div class="govuk-form-group">
                    <h1 class="govuk-label-wrapper">
                        <label class="govuk-label govuk-label--xl" asp-for="Question.Name">
                            What is your full name?
                        </label>

                    </h1>
                    <input class="govuk-input" asp-for="Question.Name" type="text" autocomplete="name" spellcheck="false">
                </div>

                <button type="submit" class="govuk-button">
                    Continue
                </button>
            </form>
        </div>
    </div>
</main>
