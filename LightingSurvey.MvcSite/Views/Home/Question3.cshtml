@{
    ViewData["Title"] = "Question 3";
}

<a asp-action="Question2" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form asp-action="Question4" method="post" novalidate>
                <h1 class="govuk-heading-xl">What is your home address?</h1>
                <div class="govuk-form-group">

                    <label class="govuk-label govuk-label--xl" for="postcode">
                        Postcode
                    </label>

                    <input class="govuk-input govuk-input--width-10" id="postcode" name="postcode" type="text">
                </div>

                <button type="submit" class="govuk-button">
                    Find address
                </button>
            </form>
        </div>
    </div>
</main>
